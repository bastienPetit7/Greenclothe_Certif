                    <div class="meilleurs-ventes-title">
                    
                            <h3 class="pl-3 h1">Nos meilleurs ventes</h3>
                    </div>
                </div>
                <div class="col-12 d-flex flex-column justify-content-center align-items-center body-collection mb-5">
                        <div class="container-collection">

                            {% for product in products %}
                                
                                <!-- Debut carte -->
                                        
                                    <div class="card-collection">
                                        <a href=" {{path('product_show',{'slug': product.slug })}} ">
                                        <div class="img-box">
                                            <img src="/assets/ressources/img/uploads/products/{{product.image}}" alt="{{product.name}}">
                                        
                                        </div>
                                        <div class="content-card-collection">
                                            <div class="product-name-collection">
                                                <h3> {{product.subtitle}} </h3>
                                            </div>
                                            <div class="price-rating">
                                                <h2> {{product.price | amount}} </h2>
                                            
                        

                                            </div>
                                        </div>
                                        </a>
                                    </div>
                                <!-- Fin Carte -->

                            {% endfor %}


                        </div>
                        <a href="{{path('product_index')}}" class="btn btn-warning btn-lg py-md-3 px-md-5">>> Accéder à la boutique <<</a>
                </div>
            
            </div>
