{% extends "base_account.html.twig" %}

{% block title %}Mes commandes{% endblock %}

{% block body %}

  <div class="mb-5 p-md-5 d-md-flex flex-column align-items-center">

        <div class="mb-5">
          <h2 class="text-center">Mes commandes</h2>
          <p class="text-center">C'est dans cette espace que vous allez pouvoir gérer vos commandes</p>
        
        </div>


        

        {% if orders | length == 0 %}
        <hr>
          <p class="text-center">
              Vous n'avez pas encore passé de commande chez Greenclothe
          
          </p>
        
        {% else %}

            
      <table class="table my-5 ">
        <thead>
          <tr>
            <th scope="col">Référence</th>
            <th scope="col" class="d-none d-md-table-cell">Passée le</th>
            <th class="text-center d-none d-md-table-cell" scope="col">Produit(s)</th>
            <th class="text-center d-none d-md-table-cell"scope="col">Total</th>
            <th class="text-right" scope="col"></th>
          </tr>
        </thead>
        <tbody>
              {% for order in orders %}
                
                  <tr>
                      <td > <span class="badge badge-secondary">{{order.reference}}</span> </td>
                      <th class="d-none d-md-table-cell" > {{order.createdAT | date('d/m/Y')}} </th>
                      <td class="text-center d-none d-md-table-cell"> {{order.orderDetails | length}}</td>
                      <td class="text-center d-none d-md-table-cell"> {{(order.carrierPrice + order.getTotal) | amount}} </td>
                      <td class="text-right"> <a href=" {{path('account_order_show', {'reference' : order.reference})}} "> voir ma commande</a></td>
                  </tr>
                              
              {% endfor %}
          
        </tbody>
      </table>
              
          
        
        
        {% endif %}


  </div>
</div>

{% endblock %}