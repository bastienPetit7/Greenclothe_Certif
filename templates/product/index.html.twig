{% extends 'base.html.twig' %}

{% block title %}Collection Greenclothe{% endblock %}

{% block body %}


   

       
<!-- ================== Page Collection ===================== -->

        <div class="container-fluid">
            <div class="row cont-top-collection px-3 ">
                <div class="col-3 align-items-center d-flex ">
                    <a href=" {{ path('home')}} " class=" text-decoration-none ">
                        <div
                            class="cont-retour-achat d-flex align-items-center justify-content-center px-2">
                            <i class="fas fa-caret-left mr-1 "></i>
                            <span class="py-2 font-weight-bold ">Retours à l'accueil</span>
                        </div>
                    </a>
                </div>
                <div class="col-9 text-center mb-4 mt-2 py-2">
                    <h2 class="text-uppercase titre-collection mb-3"> Toute la collection</h2>
                    <p>Voici l’ensemble de notre collection: des vêtements, chaussures et accessoires pour homme produits à moins de 2000kms dans de belles matières et toujours avec un petit détail qui fait la différence.</p>
                </div>
            </div>
        </div>

        <!-- --------- Espace carte produit -------------- -->
        <div class="container-fluid">

            <div class="row ">

                
          
                    <div class="dropdown-filter d-md-none d-flex justify-content-center w-100 mx-auto">
                        <i class="fas fa-chevron-right " id="chevronDropFilter"></i>
                        <h3>Filtrer</h3>
                    </div>

                    <div class="col-12 col-md-4 form-filter" id="menuFilter">
                        {{form_start(form)}}
                        {{form_row(form.string)}}
                        {{form_row(form.categories)}}

                        <button type="submit" class="btn-submit-filter" id="btnFilter">Filtrer</button>
                        {{form_end(form)}}

                    </div>
               

            

                <div class="col-12 col-md-8 d-flex justify-content-center align-items-center body-collection mb-5">
                    <div class="container-collection">


                        {% for product in products %}
                            
                        
                            <!-- Debut carte -->
                            
                                <div class="card-collection">
                                    <a href=" {{path('product_show',{'slug': product.slug })}} ">
                                    <div class="img-box">
                                        <img src="/assets/ressources/img/uploads/products/{{product.image}}" alt="{{product.name}}">
                                     
                                    </div>
                                    <div class="content-card-collection">
                                        <div class="product-name-collection">
                                            <h3> {{product.subtitle}} </h3>
                                        </div>
                                        <div class="price-rating">
                                            <h2> {{product.price | amount}} </h2>
                                        

                                        </div>
                                    </div>
                                    </a>
                                </div>
                            <!-- Fin Carte -->
                            
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>




{% endblock %}
